<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="24dp"
        tools:text="Rotary Knob Value" />

    <com.phinnovation.quizplayer.presentation.components.RotaryKnobComponent
        android:id="@+id/knob"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:initialValue="50"
        app:knobDrawable="@drawable/ic_rotary_knob"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:maxValue="100"
        app:minValue="0"
        />
    <com.phinnovation.quizplayer.presentation.components.RotaryKnobComponent
        android:id="@+id/knob2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:initialValue="50"
        app:knobDrawable="@drawable/ic_rotary_knob"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/knob3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/knob"
        app:maxValue="100"
        app:minValue="0" />

    <com.phinnovation.quizplayer.presentation.components.RotaryKnobComponent
        android:id="@+id/knob3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="24dp"
        app:initialValue="50"
        app:knobDrawable="@drawable/ic_rotary_knob"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/knob2"
        app:layout_constraintTop_toBottomOf="@+id/knob"
        app:maxValue="100"
        app:minValue="0" />
</androidx.constraintlayout.widget.ConstraintLayout>