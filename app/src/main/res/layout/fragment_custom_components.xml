<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    >

    <com.phinnovation.quizplayer.presentation.components.VUMeterComponent
        android:id="@+id/vuMeter"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:maxValue="100"
        app:minValue="0"
        app:initialValue="100"
        app:bgColor="@color/VUMeterBg"
        app:barActiveColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        />
    <com.phinnovation.quizplayer.presentation.components.RotaryKnobComponent
        android:id="@+id/knob"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:initialValue="100"
        app:knobDrawable="@drawable/ic_rotary_knob"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@+id/vuMeter"
        app:maxValue="100"
        app:minValue="0"
        />
    <com.phinnovation.quizplayer.presentation.components.VUMeterComponent
        android:id="@+id/vuMeter2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:maxValue="100"
        app:minValue="0"
        app:initialValue="0"
        app:bgColor="@color/VUMeterBg"
        app:barActiveColor="@color/bottomVUMeterBarColor"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/knob2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/knob"
        />

    <com.phinnovation.quizplayer.presentation.components.RotaryKnobComponent
        android:id="@+id/knob2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        app:initialValue="0"
        app:knobDrawable="@drawable/ic_rotary_knob"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vuMeter2"
        app:layout_constraintTop_toBottomOf="@+id/knob"
        app:maxValue="100"
        app:minValue="0" />
</androidx.constraintlayout.widget.ConstraintLayout>